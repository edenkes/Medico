<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:layoutDirection="ltr"
    tools:context="bredesh.medico.Fragments.FragmentHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvExercises"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorAppBar"
            android:fontFamily="casual"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/exercises"
            android:textColor="@color/colorWhite"
            android:textSize="32sp" />


        <ListView
            android:id="@+id/lvHome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorLiteGrey" />


    </LinearLayout>

    <ImageButton
            android:id="@+id/btDeleteForever"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end|bottom"
            android:background="@drawable/ic_delete_black_48dp" />


</FrameLayout>
