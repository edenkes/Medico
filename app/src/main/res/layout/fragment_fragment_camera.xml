<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNotificationBackground"
    android:layoutDirection="ltr"
    tools:context="bredesh.medico.Fragments.FragmentCamera">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:layout_gravity="center"
        android:weightSum="2">


        <Button
            android:id="@+id/btVideo"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/ic_videocam_black_48dp"
            android:fontFamily="cursive"
            android:text="@string/button_video"
            android:textSize="30sp"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btCamera"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/ic_photo_camera_black_48dp"
            android:text="@string/button_camera"
            android:textSize="28sp"
            android:fontFamily="cursive"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

</FrameLayout>
