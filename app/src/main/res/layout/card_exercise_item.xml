<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    android:layout_marginBottom="5dp"
    cardview:cardCornerRadius="2dp"
    cardview:cardElevation="3dp"
    cardview:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/card_alert"
        android:paddingBottom="10sp"
        android:paddingEnd="10sp"
        android:paddingStart="10sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSUN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Sunday_short"
                android:textColor="@color/labelColor"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvMON"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/Monday_Short"
                android:textColor="@color/labelColor"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvTUE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/Tuesday_Short"
                android:textColor="@color/labelColor"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvWED"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/Wednesday_Short"
                android:textColor="@color/labelColor"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvTHU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/Thursday_Short"
                android:textColor="@color/labelColor"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvFRI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/Friday_Short"
                android:textColor="@color/labelColor"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvSAT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/Saturday_Short"
                android:textColor="@color/labelColor"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/ivRepetition"
                android:layout_width="20sp"
                android:layout_height="match_parent"
                android:layout_marginStart="20sp"
                android:scaleType="fitXY"
                android:src="@drawable/repeats" />

            <TextView
                android:id="@+id/lbItemNoOfRepeats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:textColor="@color/labelColor" />

            <TextView
                android:id="@+id/txItemDosageType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:textColor="@color/labelLightColor" />
        </LinearLayout>


        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:maxEms="30"
            android:maxLength="50"
            android:maxLines="1"
            android:textColor="@color/labelColor"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvItemTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10sp"
            android:maxEms="30"
            android:maxLength="50"
            android:textColor="@color/labelColor"
            android:textDirection="anyRtl"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvItemTimeMulti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10sp"
            android:maxEms="30"
            android:maxLength="50"
            android:textColor="@color/labelColor"
            android:textDirection="locale"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btPlay"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_round"
            android:focusable="true"
            android:src="@drawable/ic_play_arrow_black_48dp" />



    </RelativeLayout>

</android.support.v7.widget.CardView>