<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorWhiteTransparent"
        android:descendantFocusability="blocksDescendants"
        android:paddingRight="15sp"
        android:paddingBottom="5sp"
        android:paddingTop="5sp"
        android:paddingLeft="15sp"
        android:id="@+id/relativeLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <TextView android:textColor="@color/titleColor"
            android:id="@+id/tvSAT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/tvFRI"
            android:text="@string/Saturday_Short"
            android:visibility="invisible" />

        <TextView android:textColor="@color/titleColor"
            android:id="@+id/tvFRI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/tvTHU"
            android:text="@string/Friday_Short"
            android:visibility="invisible" />

        <TextView android:textColor="@color/titleColor"
            android:id="@+id/tvTHU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/tvWED"
            android:text="@string/Thursday_Short"
            android:visibility="invisible" />

        <TextView android:textColor="@color/titleColor"
            android:id="@+id/tvWED"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/tvTUE"
            android:text="@string/Wednesday_Short"
            android:visibility="invisible" />

        <TextView android:textColor="@color/titleColor"
            android:id="@+id/tvTUE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/tvMON"
            android:text="@string/Tuesday_Short"
            android:visibility="invisible" />

        <TextView android:textColor="@color/titleColor"
            android:id="@+id/tvMON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/tvSUN"
            android:layout_marginStart="10dp"
            android:text="@string/Monday_Short"
            android:visibility="invisible" />

        <TextView android:textColor="@color/titleColor"
            android:id="@+id/tvSUN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/Sunday_short"
            android:visibility="invisible" />

        <TextView android:textColor="@color/titleColor"
            android:id="@+id/tvExerciseTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvSAT"
            android:layout_alignBottom="@+id/tvSAT"
            android:layout_alignParentEnd="true"
            android:maxWidth="235sp"
            android:overScrollMode="ifContentScrolls"
            android:text="8:00"
            android:textDirection="ltr"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView android:textColor="@color/titleColor"
            android:id="@+id/tvExercisesName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:text="exercisesName"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10sp"
            android:layout_below="@id/tvExercisesName"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageRepeat"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginTop="3sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="false"
                android:scaleType="fitXY"
                android:src="@drawable/repeats" />


            <TextView android:textColor="@color/titleColor"
                android:id="@+id/lblExerciseNoOfRepeats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:paddingStart="5sp"
                android:text="1"
                android:textSize="20sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btPlay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40sp"
            android:focusable="true"
            android:background="@drawable/ic_play_circle_outline_black_24dp_blue" />

        <Button
            android:id="@+id/btAlerts"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10sp"
            android:background="@drawable/ic_alarm_black_48dp_green"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_weight="1"
        android:layout_below="@id/relativeLayout"
        android:background="@color/titleColor"
        />

</RelativeLayout>