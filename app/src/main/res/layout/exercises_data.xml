<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:focusableInTouchMode="true"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lbExerciseName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="false"
            android:gravity="center_vertical"
            android:labelFor="@+id/etExerciseName"
            android:maxLines="1"
            android:paddingStart="5sp"
            android:singleLine="true"
            android:text="@string/exercise_name_label"
            android:textColor="@color/textColor"
            android:textSize="24sp" />


        <EditText
            android:id="@+id/etExerciseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.68"
            android:background="@color/colorLiteGrey"
            android:cursorVisible="true"
            android:ems="13"
            android:fontFamily="casual"
            android:hint="@string/exercise_name_hint"
            android:inputType="textCapWords"
            android:maxLength="20"
            android:maxLines="1"
            android:paddingEnd="5sp"
            android:paddingStart="5sp"
            android:requiresFadingEdge="vertical"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@color/textColor"
            android:textColorHint="@color/colorGreyLite"
            android:textIsSelectable="false"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        android:layoutDirection="rtl"
        android:nextFocusForward="@null"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblRepeats"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="5sp"
            android:text="@string/no_of_repetitions"
            android:textColor="@color/textColor"
            android:textSize="24sp" />


        <NumberPicker
            android:id="@+id/numberPicker"
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:layout_marginStart="10sp"
            android:theme="@style/AppTheme.Picker" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"></LinearLayout>

            <ImageButton
                android:id="@+id/btPlay"
                android:layout_width="160sp"
                android:layout_height="60sp"
                android:layout_alignParentEnd="false"
                android:layout_centerVertical="false"
                android:layout_gravity="center"
                android:layout_marginEnd="10sp"
                android:layout_marginStart="10sp"
                android:layout_weight="1"
                android:background="@drawable/button_round"
                android:focusable="true"
                android:src="@drawable/ic_play_circle_outline_black_24dp_blue" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btShootVideo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_videocam_black_48dp" />

                <Button
                    android:id="@+id/btShootPhoto"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/ic_photo_camera_black_48dp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        android:layout_marginTop="5sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btChangeFrequency"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:gravity="center|start"
            android:paddingStart="5sp"
            android:text="@string/select_days"
            android:textColor="@color/textColor"
            android:textSize="24sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lblSelectedDays"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5sp"
            android:gravity="center_vertical"
            android:text="@string/all_days"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:id="@+id/btAddAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/colorGreyLite"
            android:text="@string/btn_add_alert"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="17sp" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/time_views"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btConfirm"
            android:layout_below="@+id/btAddAlert"
            android:layout_marginTop="10sp"
            android:background="@color/colorGreyLite"
            ></android.support.v7.widget.RecyclerView>


        <Button
            android:id="@+id/btConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/transparent"
            android:text="@string/btn_confirm"
            android:textColor="@color/textColor"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btConfirm"
            android:background="@color/colorRed"
            android:text="@string/delete_exercise_button"
            android:textSize="24sp" />

    </RelativeLayout>


</LinearLayout>