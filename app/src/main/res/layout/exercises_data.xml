<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/screen_add_alert_artboard3">

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8 : 00"
        android:textColor="@color/colorWhite"
        android:textSize="35sp"
        android:layout_below="@+id/btChangeTime"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btChangeTime"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/transparent"

        android:layout_below="@+id/btChangeFrequency"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <Button
        android:id="@+id/btChangeFrequency"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/transparent"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/btConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/etExerciseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="13"
        android:inputType="textPersonName"
        android:hint="Exercise Name"
        android:textSize="25sp"
        android:maxLines="1"
        android:fontFamily="casual"
        android:textColorHint="@color/textColor"
        android:textColor="@color/textColor"
        android:background="@color/colorWhiteTransparent"
        android:layout_marginTop="50dp" />

    <EditText
        android:id="@+id/etRepeats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="13"
        android:inputType="number"
        android:hint="Repeats (default 1)"
        android:textSize="25sp"
        android:maxLines="1"
        android:fontFamily="casual"
        android:textColorHint="@color/textColor"
        android:textColor="@color/textColor"
        android:layout_below="@id/etExerciseName"
        android:layout_marginTop="50sp"
        android:background="@color/colorWhiteTransparent"/>

</RelativeLayout>