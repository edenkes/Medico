<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLiteGrey"
    android:focusableInTouchMode="true"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />



    <EditText
        android:id="@+id/etExerciseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:maxLength="16"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:maxLines="1"
        android:hint="@string/exercise_name_hint"
        android:inputType="textPersonName"
        android:textColor="@color/titleColor"
        android:textColorHint="@color/titleColor"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblRepeats"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="5sp"
            android:text="@string/no_of_repetitions"
            android:textColor="@color/titleColor"
            android:textSize="20sp" />


        <NumberPicker
            android:id="@+id/numberPicker"
            android:layout_width="wrap_content"
            android:layout_height="60sp"
            android:layout_marginStart="10sp"
            android:theme="@style/AppTheme.Picker" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="5sp"
        android:layout_marginRight="10sp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btShootVideo"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:scaleType="center"
            android:background="@drawable/button_round"
            android:src="@drawable/ic_videocam_black_48dp" />

        <ImageButton
            android:id="@+id/btPlay"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:layout_marginRight="10sp"
            android:scaleType="center"
            android:background="@drawable/button_round"
            android:src="@drawable/ic_play_arrow_black_48dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/days_alert_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btAddAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_item_data"
            android:text="@string/btn_add_alert"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:padding="5sp"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btChangeFrequency"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_item_data"
            android:gravity="center"
            android:layout_marginRight="10sp"
            android:paddingStart="5sp"
            android:paddingEnd="5sp"
            android:text="@string/select_days"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lblSelectedDays"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:gravity="center_vertical"
            android:text="@string/all_days"
            android:textAlignment="center"
            android:maxLines="2"
            android:scrollbars="vertical"
            android:textColor="@color/titleColor"
            android:textSize="18sp" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/time_views"
            android:layout_above="@+id/subLayout"
            android:background="@color/colorGreyLite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/subLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="@color/titleColor"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/btConfirm"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_weight="0.5"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="@string/btn_confirm"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btDelete"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0sp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="@string/delete_exercise_button"
                android:textSize="20sp" />


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>